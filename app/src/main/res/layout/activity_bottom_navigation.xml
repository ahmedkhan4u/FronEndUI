<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activities.BottomNavigationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:id="@+id/top_layout"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/logo"
            android:id="@+id/logo"
            android:layout_marginStart="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="YASSINEJENNANE01"
            android:textColor="@android:color/white"
            android:fontFamily="@font/arabic"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/logo"
            android:layout_marginStart="48dp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="4dp"
            android:layout_gravity="center"
            android:drawableEnd="@drawable/ic_online"
            />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout"
        android:background="@drawable/top_round_layout"
        android:id="@+id/fragment"
        ></FrameLayout>

    <com.tenclouds.fluidbottomnavigation.FluidBottomNavigation
        android:id="@+id/fluidBottomNavigation"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:textColor="@color/colorPrimary"
        app:iconColor="@color/colorPrimary"
        app:accentColor="@color/orange_color"
        app:iconSelectedColor="@color/colorPrimary"
        android:layout_width="match_parent" />


</RelativeLayout>