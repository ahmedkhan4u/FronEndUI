<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ShareFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="16dp"
        android:elevation="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@drawable/round_primary_bg"
                android:layout_margin="10dp"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginEnd="40dp"
                    android:background="@drawable/textview_bg_white"
                    android:padding="4dp"
                    android:text="ملومات"
                    android:textSize="16sp"
                    android:fontFamily="@font/arabic"
                    android:paddingEnd="10dp"
                    android:paddingBottom="4dp"
                    />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_orange"
                    android:layout_marginTop="16dp"
                    android:text="ملومات"
                    android:layout_alignParentBottom="true"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/arabic_light"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:background="@drawable/btn_primary"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="8dp"
                    android:text="الاختن"
                    android:layout_alignParentBottom="true"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/arabic_light"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:background="@color/grey_color"
                android:padding="8dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginVertical="6dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملومات الاختن:"
                    android:gravity="center"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/arabic_light"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملومات الاختن:"
                    android:gravity="center"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/arabic_light"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#BFBFBF"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ملومات الاختن:"
                    android:gravity="center"
                    android:layout_below="@+id/top_view"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/arabic_light"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/share_items_list"/>
                    <include layout="@layout/share_items_list"/>
                    <include layout="@layout/share_items_list_2"/>
                    <include layout="@layout/share_items_list"/>
                    <include layout="@layout/share_items_list"/>
                    <include layout="@layout/share_items_list_2"/>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>